<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - The Lineup</title>
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="/css/header.css">
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;500;700&family=Nunito:wght@400;600&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">
    <link href = "https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    
<%- include('partials/header') %>

    <main class="dashboard-content">  
          
        <section class="event-images">
            <h2>Recent Events</h2>
            <div class="event-images">
                <% recentEvents.forEach(event => { %>
                    <div class="event-image" data-event-name="<%= event.caption %>">
                        <a href="/event/<%= encodeURIComponent(event.caption) %>">
                            <img src="<%= event.url %>" alt="<%= event.caption %>">
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
        
        <section class="event-cards">
            <h2>Upcoming Events</h2>
            <div class="event-cards">
                <% upcomingEvents.forEach(event => { %>
                    <div class="event-card" data-event-name="<%= event.caption %>">
                        <a href="/event/<%= encodeURIComponent(event.caption) %>">
                            <img src="<%= event.url %>" alt="<%= event.caption %>">
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
        
    
        <section class="club-icons">
            <h2>Our Clubs</h2>
            <div class="club-icons">
                <% clubs.forEach(club => { %>
                    <div class="club-icon">
                        <img src="<%= club.logo %>" alt="<%= club.name %>"class="club-logo">
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

</body>
</html>