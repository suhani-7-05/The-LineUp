<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liked Events - The Lineup</title>
    <link rel="stylesheet" href="/css/liked-events.css">
    <link rel="stylesheet" href="/css/header.css">
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;500;700&family=Nunito:wght@400;600&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
   
    <%- include('partials/header') %>

    <main class="dashboard-content">
        <section class="liked-events">
            <h2>Liked Events</h2>
            <div class="events-container">
                <% likedEvents.forEach(event => { %>
                    <div class="event-row" data-title="<%= event.title %>">
                        <div class="event-image">
                            <img src="<%= event.image %>" alt="<%= event.title %>">
                        </div>
                        <div class="event-details">
                            <div class="detail-item">
                                <span class="label">Venue:</span>
                                <span class="value"><%= event.venue %></span>
                            </div>
                            <div class="detail-item">
                                <span class="label">Date:</span>
                                <span class="value"><%= event.date %></span>
                            </div>
                            <div class="detail-item">
                                <span class="label">Time:</span>
                                <span class="value"><%= event.time %></span>
                            </div>
                        </div>
                        <button class="heart-btn active">
                            <svg viewBox="0 0 24 24" class="heart-icon">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                            </svg>
                        </button>
                    </div>
                <% }) %>
                
            </div>
        </section>
    </main>

    <script type="module" src="/js/likedEvents.js"></script>
</body>
</html>
